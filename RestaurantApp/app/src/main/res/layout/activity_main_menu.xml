<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_background"
    android:orientation="vertical"
    tools:context="edu.cse4230.schilbe.restaurantapp.MainMenuActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:src="@drawable/logo" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/MainMenu_Image_Width"
                android:layout_height="@dimen/MainMenu_Image_Height"
                android:layout_weight="1"
                android:src="@drawable/menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/news" />

            <ImageView
                android:layout_width="@dimen/MainMenu_Image_Width"
                android:layout_height="@dimen/MainMenu_Image_Height"
                android:layout_weight="1"
                android:src="@drawable/movies" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/MainMenu_Image_Width"
                android:layout_height="@dimen/MainMenu_Image_Height"
                android:layout_weight="1"
                android:src="@drawable/feedback" />

            <ImageView
                android:layout_width="@dimen/MainMenu_Image_Width"
                android:layout_height="@dimen/MainMenu_Image_Height"
                android:layout_weight="1"
                android:src="@drawable/booking" />

            <ImageView
                android:layout_width="@dimen/MainMenu_Image_Width"
                android:layout_height="@dimen/MainMenu_Image_Height"
                android:layout_weight="1"
                android:src="@drawable/place" />
        </TableRow>
    </TableLayout>
</LinearLayout>